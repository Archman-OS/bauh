      "sources": [
        {
          "type": "file",
          "path": "../aur/icons/32x32.png"
        },
        {
          "type": "file",
          "path": "../aur/icons/48x48.png"
        },
        {
          "type": "file",
          "path": "../aur/icons/64x64.png"
        }
      ]
    },
    {
      "name": "desktop-entry",
      "buildsystem": "simple",
