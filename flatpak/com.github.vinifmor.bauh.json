      "build-commands": [
        "install -Dm0644 32x32.png /app/share/icons/hicolor/32x32/apps/com.github.vinifmor.bauh.png",
        "install -Dm0644 48x48.png /app/share/icons/hicolor/48x48/apps/com.github.vinifmor.bauh.png",
